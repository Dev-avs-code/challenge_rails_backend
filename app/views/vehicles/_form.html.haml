= form_with model: @vehicle, data: { action: "turbo:submit-end->modal#submitForm" } do |f|
  - if @vehicle.errors.any?
    .alert.alert-danger
      %h4.alert-heading= "#{pluralize(@vehicle.errors.count, 'error')} prohibited this vehicle from being saved:"
      %ul.mb-0
        - @vehicle.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = f.label :vin, class: 'form-label'
    = f.text_field :vin, class: 'form-control', placeholder: 'Enter VIN'

  .mb-3
    = f.label :plate, class: 'form-label'
    = f.text_field :plate, class: 'form-control', placeholder: 'Enter license plate'

  .mb-3
    = f.label :brand, class: 'form-label'
    = f.text_field :brand, class: 'form-control', placeholder: 'Enter brand'

  .mb-3
    = f.label :model, class: 'form-label'
    = f.text_field :model, class: 'form-control', placeholder: 'Enter model'

  .mb-3
    = f.label :year, class: 'form-label'
    = f.number_field :year, class: 'form-control', min: 1990, max: Date.current.year, placeholder: 'Enter year'

  .mb-3
    = f.label :status, class: 'form-label'
    = f.select :status, Vehicle.statuses.keys.map { |s| [s.humanize, s] }, {}, class: 'form-select'

  .d-flex.justify-content-end
    = f.submit 'Save', class: 'btn btn-primary'
